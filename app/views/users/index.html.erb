<div class= continer>
  <div class= inner>
    <h1 class= title>Sign up</h1>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <h2><%= f.label :name %></h2>
          <%= f.text_field :name, class:'form-control'%>
        </div>
        <div class="form-group">
          <h2><%= f.label :password %></h2>
          <%= f.text_field :password, class: 'form-control' %>
        </div>

          <p class = con><%= f.submit "登録", class: 'signlog' %></p>
        <% end %>
        <p class = linktitle><%= link_to 'ログインはこちら', login_path, class: "linkpage" %></p>
      </div>
    </div>
  </div>
</div>